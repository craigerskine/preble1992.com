---
title: 'School Spirit'
layout: 'layouts/default.njk'
---

{% import 'components/h2.njk' as h2 %}
{% import 'components/btn.njk' as btn %}
{% import 'components/div.njk' as div %}

<section>
  <div class="text-white">{{ div.x() }}</div>
  <article class="px-4 bg-white">
    <div class="mx-auto max-w-7xl">
      <div class="mx-auto py-12 max-w-2xl lg:(mx-0)">
        {{ h2.x("School Spirit") }}
        <p class="text-2xl leading-normal">Help support the people that organize the reunions and the dude that built this site with his bare hands.</p>
      </div>
      <div class="flex(& wrap)">
        {% for item in merch.items %}
          <a href="https://www.teepublic.com/t-shirt/34031441-preble-92" class="mx-auto sm:(w-1/2) md:(w-1/3)">
            <figure class="p-4">
              <img src="/_assets/img/spirit/{{ item.img }}" alt="{{ item.title }} merch item" class="rounded-lg" />
              <figcaption class="text-center">{{ item.title }}</figcaption>
            </figure>
          </a>
        {% endfor %}
      </div>
      <hr class="my-12" />
      <p class="text-center">{{ btn.x('Donate', ico='fa-brands fa-paypal', url='https://paypal.me/qrayg') }}</p>
    </div>
  </article>
</section>