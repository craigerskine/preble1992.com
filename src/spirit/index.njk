---
title: 'School Spirit'
layout: 'layouts/default.njk'
---

{% import 'components/h2.njk' as h2 %}
{% import 'components/btn.njk' as btn %}
{% import 'components/div.njk' as div %}

<section>
  <div class="text-white">{{ div.x() }}</div>
  <article class="px-4 bg-white">
    <div class="mx-auto max-w-7xl">
      <div class="mx-auto py-12 max-w-2xl lg:(mx-0)">
        {{ h2.x(spirit.donate.heading) }}
        <p class="text-2xl leading-normal">{{ spirit.donate.lead }}</p>
      </div>
      <iframe
      src="https://www.paypal.com/giving/campaigns?campaign_id=PRVD8RKMP76L8"
      title="PayPal donate campaign card"
      frameborder="0"
      width="300"
      height="420"
      scrolling="no"
      class="mx-auto"
    ></iframe>
      <hr class="my-12" />
      <div class="mx-auto py-12 max-w-2xl lg:(mx-0)">
        {{ h2.x(spirit.merch.heading) }}
        <p class="pb-8 text-xl leading-normal">{{ spirit.merch.lead }}</p>
      </div>
      <div class="flex(& wrap)">
        {% for item in spirit.merch.items %}
          <a href="{{ item.url }}" class="mx-auto w-1/3">
            <figure class="p-4">
              <img src="/_assets/img/spirit/{{ item.img }}" alt="{{ item.title }} merch item" class="rounded-lg" />
              <figcaption class="pt-1 text-center">{{ item.title }}</figcaption>
            </figure>
          </a>
        {% endfor %}
        <div class="pt-10 w-full text-center">
          {{ btn.x('More...', url='https://teepublic.com/user/qrayg', outline=true) }}
        </div>
      </div>
    </div>
  </article>
</section>