---
layout: 'layouts/default.njk'
---

{% import 'components/h2.njk' as h2 %}
{% import 'components/btn.njk' as btn %}
{% import 'components/deet-list.njk' as deetList %}
{% import 'components/div.njk' as div %}

<section class="mx-auto px-4 max-w-2xl lg:(max-w-4xl px-12)">
  <h1 class="py-12 bg-gradient-to-r from-pri-500 to-pri-900 text(5xl transparent) bg-clip-text tracking-tighter font-bold sm:(text-7xl)">
    {{ home.mast.heading }}
  </h1>
  <div class="pb-6 space-y-6 text-lg lg:(text-2xl leading-normal)">
    <p>{{ home.mast.lead }}</p>
    <p>{{ home.mast.content }}</p>
  </div>
  <dl class="pt-6 pb-24 grid grid-cols-2 gap-y-6 gap-x-10 sm:(gap-y-10 gap-x-16 text-center) lg:(auto-cols-auto grid-flow-col grid-cols-none justify-start text-left)">
    {% for info in home.mast.details %}
      <div>
        <dt class="text(sm pri-600) tracking-wide uppercase">{{ info.label }}</dt>
        <dd class="text(lg pri-800) font-bold tracking-tight lg:(text-2xl)">{{ info.value }}</dd>
      </div>
    {% endfor %}
  </dl>
</section>
<section>
  <div class="section-div text-white">{{ div.div(dir='t') }}</div>
  <article class="px-4 bg-white">
    <div class="mx-auto max-w-7xl">
      <div class="mx-auto py-12 max-w-2xl lg:(mx-0)">
        {{ h2.h2(home.classmates.heading) }}
        <p class="text-2xl leading-normal">
          {{ home.classmates.lead }}
        </p>
      </div>
      <div class="pt-8 grid(& cols-1) items-start gap-y-8 gap-x-8 sm:(gap-y-16) lg:(pt-16 grid-cols-4)"
        x-data="{
          eraTabActive: 1,
          eraTabs: [
            { era: 'Modern-ish', year: '2000\'s' },
            { era: 'High School', year: '1990\'s' },
            { era: 'Middle School', year: '1980\'s' },
          ]
        }">
        <div class="pb-4 flex">
          <ul class="w-full flex(& row) justify-center lg:(w-auto flex-col justify-start)" role="tablist">
            <template x-for="(tab, index) in eraTabs">
              <li>
                <a href="#" class="group flex(& col) motion-safe:(transition) hover:(text-pri-600) lg:(flex-row)" :class="{ 'active text-sec-600': eraTabActive === index }" @click.prevent="eraTabActive = index">
                  <div class="pb-4 flex(& row) items-center lg:(pb-0 flex-col)" aria-hidden="true">
                    <div class="w-[9px] h-[9px] flex-none rounded-full relative z-10 motion-safe:(transition)" :class="eraTabActive === index ? 'bg-current ring-2 ring-white transform scale-150' : 'ring-1 ring-current'"></div>
                    <div class="w-full h-px bg-gray-700 flex opacity-20 lg:(w-px h-full)">
                      <template x-if="index === (eraTabs.length - 1)">
                        <div class="w-full bg-gradient-to-l from-white lg:(bg-gradient-to-t)"></div>
                      </template>
                    </div>
                  </div>
                  <div class="pr-6 pb-12 sm:(pr-12) lg:(pr-0 pl-12)">
                    <small class="-mt-[5px] leading-none text-xs block opacity-60 sm:(text-sm)" x-text="tab.era"></small>
                    <strong class="py-2 text-xl block md:(text-3xl)" x-text="tab.year"></strong>
                  </div>
                </a>
              </li>
            </template>
          </ul>
        </div>
        <div class="lg:(col-span-3)">
          <ul class="grid(& cols-1) gap-x-8 gap-y-10 sm:(grid-cols-2 gap-y-16) md:(grid-cols-3)">
            {% for person in people %}
              {% if person.allowed %}
                <li class="w-full">
                  <figure class="mx-auto w-full max-w-xs relative lg:(max-w-none)">
                    <div class="w-full pt-[100%] relative">
                      <img src="/_assets/img/people/{{ person.last | slugify }}-{{ person.first | slugify }}.jpg?v={% version %}" alt="{{ person.first }} {{ person.last }} photo" class="w-full h-full object(center cover) absolute inset-0 rounded-xl md:(rounded-3xl)" />
                    </div>
                    <figcaption class="pt-2 pl-4">
                      <strong class="block md:(text-lg)">{{ person.first }} {{ person.last }}</strong>
                      <small class="text-sm block opacity-60">{{ person.meta }}</small>
                      <div class="p-3 bg(sec-600) text(sm white center) absolute inset-x-4 -top-4 rounded-lg shadow-xl transform -rotate-3"
                        x-show="eraTabActive !== 1" x-text="eraTabActive === 0 ? 'Send us your photo...' : 'Photo coming soon... Adam?'"></div>
                      <i x-show="eraTabActive !== 1" class="fa-thin fa-fw fa-user-graduate text(9xl sec-200) absolute top-24 left-1/2 opacity-20 transform -translate-x-1/2 md:(text-[calc(6vw)])"></i>
                    </figcaption>
                  </figure>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
          <p class="py-12 text-center">{{ btn.btn(home.classmates.action, url='#', class='pointer-events-none', prevent='true') }}</p>
        </div>
      </div>
    </div>
  </article>
</section>
<section class="bg-pri-300 relative">
  <div class="section-div text-white">{{ div.div(dir='b') }}</div>
  <div class="mx-auto py-8 px-4 max-w-7xl relative lg:(py-32)">
    <div class="mx-auto pb-12 max-w-2xl lg:(mx-0 max-w-4xl pr-24)">
      {{ h2.h2(home.details.heading) }}
      <p class="text(2xl)">{{ home.details.lead }}</p>
    </div>
    <ul class="mx-auto max-w-md bg-white grid(& cols-1) divide(y gray-500 opacity-20) overflow-hidden rounded-lg shadow lg:(grid-cols-3 divide-x divide-y-0 max-w-none)">
      {% for detail in home.details.details %}
        {{ deetList.deet(
          detail.label,
          detail.info,
          detail.sub,
          url=detail.url,
          ico=detail.ico,
          idx=loop
        ) }}
      {% endfor %}
    </ul>
  </div>
  <div class="section-div text-white">{{ div.div(dir='t') }}</div>
</section>