---
title: 'Yearbook'
layout: 'layouts/default.njk'
pagination:
  data: people
  size: 24
---

{%- import 'components/h2.njk' as h2 %}
{%- import 'components/student.njk' as student %}
{%- import 'components/div.njk' as div %}

<section>
  <div>{{ div.x() }}</div>
  <article class="mx-auto py-8 px-4 bg-white relative lg:(py-24)">
    <div class="mx-auto max-w-7xl">
      <div>{{ h2.x("Yearbook") }}</div>
      <ul class="grid(& cols-2) gap-x-8 gap-y-10 sm:(gap-y-16) md:(grid-cols-3)">
        {% for person in pagination.items %}
          <li class="w-full">
            {{ student.x(info=person) }}
          </li>
        {% endfor %}
      </ul>
      <nav class="pt-12" aria-labelledby="yearbook-nav">
        <p id="yearbook-nav" class="sr-only">Yearbook navigation</p>
        <ol class="text-3xl flex items-center justify-center gap-x-6">
          {% if pagination.href.previous %}<li><a href="{{ pagination.href.previous }}" title="Previous page"><i class="fa-light fa-fw fa-angle-left"></i></a></li>{% endif %}
          <li class="text-sm opacity-50">{% if pagination.pageNumber %}{{ pagination.pageNumber }} of {% endif %}{{ pagination.pages.length }} pages</li>
          {% if pagination.href.next %}<li><a href="{{ pagination.href.next }}" title="Next page"><i class="fa-light fa-fw fa-angle-right"></i></a></li>{% endif %}
        </ol>
      </nav>
    </div>
  </article>
</section>
