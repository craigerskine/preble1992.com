---
title: 'School Store'
layout: 'layouts/default.njk'
---

{%- from 'components/heading.njk' import heading -%}
{%- from 'components/btn.njk' import btn -%}
{%- from 'components/divider.njk' import divider -%}

<section>
  <div>{{ divider() }}</div>
  <article class="mx-auto py-8 px-4 bg-white relative lg:(py-24)">
    <div class="mx-auto max-w-7xl">
      <div class="relative lg:(flex items-center)">
        <div class="hidden text-sec-500 opacity-20 lg:(block absolute top-1/2 left-1/2 transform -translate-y-1/2)"><iconify-icon icon="fa6-solid:arrow-right-from-bracket" inline="false" class="text-[10rem]"></iconify-icon></div>
        <div class="mx-auto py-12 max-w-2xl relative lg:(mx-0)">
          {%- call heading({}) %}
            {{ spirit.donate.heading }}
          {%- endcall %}
          <p class="text-2xl leading-normal">{{ spirit.donate.lead }}</p>
        </div>
        <iframe
          src="https://www.paypal.com/giving/campaigns?campaign_id=PRVD8RKMP76L8"
          title="PayPal donate campaign card"
          frameborder="0"
          width="300"
          height="425"
          scrolling="no"
          class="mx-auto relative"
        ></iframe>
      </div>
    </div>
  </article>
</section>
<section class="bg-pri-300 relative">
  <div>{{ divider({dir:'b'}) }}</div>
  <article class="mx-auto py-8 px-4 max-w-7xl relative lg:(py-24)">
    <div class="mx-auto pb-12 max-w-2xl lg:(mx-0 max-w-4xl pr-24)">
      {%- call heading({}) %}
        {{ spirit.merch.heading }}
      {%- endcall %}
      <p class="text(2xl)">{{ spirit.merch.lead }}</p>
    </div>
    <div class="flex(& wrap)">
      {%- for item in spirit.merch.items %}
        <a href="{{ item.url }}" class="group mx-auto py-8 px-4 w-full max-w-sm sm:(w-1/3)">
          <div class="relative">
            <img src="/_assets/img/spirit/{{ item.img }}" alt="{{ item.title }} merch item" class="w-full object-cover shadow-xl rounded-3xl transform motion-safe:(transition) group-hover:(rotate-3) md:(h-72)" />
            <div class="py-1 px-2 bg-pri-800 text-pri-400 text(xs center) truncate  ring(2 white) absolute -bottom-3 inset-x-2 rounded-lg transform motion-safe:(transition) group-hover:(bg-pri-900 text-pri-100 -translate-y-2) md:(text-base inset-x-8)">{{ item.title }}</div>
          </div>
        </a>
      {%- endfor %}
      <div class="pt-10 w-full text-center">
        {{ btn('More...', url='https://teepublic.com/user/qrayg', outline=true) }}
      </div>
    </div>
  </article>
  <div class="section-div text-white">{{ divider({dir:'t'}) }}</div>
</section>
