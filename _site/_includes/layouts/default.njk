<!doctype html>
<html lang="en" class="bg-gray-900" x-data="{}" hidden x-cloak>

  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>{% if title %}{{ title +' / '+ site.meta.title }}{% else %}{{ site.meta.title or site.meta.title }}{% endif %}</title>
    <meta name="description" content="{{ site.meta.description }}" />
    <meta name="author" content="{{ site.meta.author + ' - '+ site.meta.author_url }}" />
    <meta name="generator" content="{{ eleventy.generator }}" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100..900&display=swap" />

    <meta property="og:title" content="{% if title %}{{ title +' / '+ site.meta.title }}{% else %}{{ site.meta.title or site.meta.title }}{% endif %}" />
    <meta property="og:description" content="{{ site.meta.description }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://preble1992.com{{ page.url }}" />
    <meta property="og:image" content="https://preble1992.com/_assets/img/og.png" />

    {% import 'components/logo.njk' as logo %}
    {% import 'components/btn.njk' as btn %}

  </head>

  <body class="bg-sec-200 bg-opacity-80 text-pri-900 font-serif">

    <div class="bg-gradient-to-b from-white fixed{% if page.url === '/' %} inset-0{% else %} h-[300px] inset-x-0 top-0 {% endif %}" aria-hidden="true"></div>
    <div class="w-1/2 h-screen bg(left contain no-repeat) fixed top-0 left-0 opacity-25 filter blur-sm transform -translate-x-1/3" aria-hidden="true" style="background-image: url('/_assets/img/bg-hornet.png')"></div>

    <div class="min-h-screen flex(& col) relative">
      <header class="py-6 px-4 w-full flex-none relative lg:(py-10)">
        <div class="mx-auto max-w-7xl flex(& wrap) items-center justify-between lg:(flex-nowrap)">
          <a href="/" class="group block transform motion-safe:(transition) hover:(rotate-3) lg:(grow basis-0)">
            {{ logo.x(
              title=site.meta.title,
              svg='m-auto w-auto h-12 text-sec-600 motion-safe:(transition) group-hover:(text-sec-500) lg:(h-16)',
              logo='text-pri-800 motion-safe:(transition) group-hover:(text-pri-600)'
            ) }}
          </a>
          <div class="mb-6 pb-6 border(b pri-500 opacity-50) w-full text(sec-700 xs) order-first lg:(mb-0 pb-0 border-0 w-auto text-base order-none)">
            {% for info in site.reunion.slice(0, 1) %}
              <div class="mx-auto flex items-center justify-center space-x-2 sm:(space-x-4)">
                <p>
                  <time datetime="{{ info.dateFull }}">
                    {{ info.dateMonth }}
                    {{ info.dateDay }},
                    {{ info.dateYear }}
                  </time>
                </p>
                <b class="opacity-30" aria-hidden="true">&mdash;</b>
                <p><sup class="mr-1 inline-block opacity-70">@</sup>{{ info.time }}pm</p>
                <b class="opacity-30" aria-hidden="true">&mdash;</b>
                <p>{{ info.location }}</p>
              </div>
            {% endfor %}
          </div>
          <div class="flex items-center space-x-8 lg:(grow basis-0 justify-end)">
            {{ btn.x(site.nav.action, sub='Donate / Merch', ico='fa fa-fw fa-store text-sec-600 lg:(text-2xl)', url='/spirit/', class='py-1 bg-sec-50 md:(py-2.5 leading-none)', outline='true') }}
          </div>
        </div>
      </header>
      <main class="w-full h-full flex-1">
        {{ content | safe }}
      </main>
      <footer class="mt-auto w-full flex-none">
        <div class="py-4 px-4 bg-white lg:(pt-24)">
          <div class="-mx-4 py-20 px-4 max-w-4xl bg(sec-300 gradient-to-r) from-sec-100 relative relative sm:(px-6) md:(mx-auto rounded-3xl px-16)">
            <div class="ring(2 inset sec-500 opacity-20) hidden absolute inset-0 transform translate-x-5 translate-y-5 rotate-2 rounded-3xl lg:(block)" aria-hidden="true"></div>
            <div class="ring(2 inset sec-500 opacity-50) hidden absolute inset-0 transform -translate-x-4 -translate-y-4 -rotate-1 rounded-3xl lg:(block)" aria-hidden="true"></div>
            <div class="mx-auto max-w-2xl grid(& grid-cols-1) items-center gap-x-16 gap-y-14 relative z-10 xl:(max-w-none grid-cols-2)">
              <div class="text-sec-700 space-y-4">
                <strong class="text(4xl sec-900) tracking-tighter font-medium block sm:(text-5xl)">{{ site.newsletter.heading }}</strong>
                <p class="text-lg tracking-tight">{{ site.newsletter.lead }}</p>
              </div>
              <div class="xl:(text-center)">
                {{ btn.x(site.newsletter.action, url='http://eepurl.com/h8CPAL', class='px-16') }}
              </div>
              <!-- <form class="opacity-50">
                <div class="py-2.5 pr-2.5 w-full flex bg-white relative rounded-xl shadow-xl motion-safe:(transition) focus-within:(ring(2 sec-900)">
                  <label for="form-newsletter-signup" class="sr-only">Email</label>
                  <input type="email" id="form-newsletter-signup" placeholder="{{ site.newsletter.placeholder }}" class="w-full flex-1 bg-transparent pl-6 pr-2.5 focus:outline-none" required disabled />
                  <span class="flex-none">{{ btn.x(site.newsletter.action, as='button', class='pointer-events-none', prevent='true') }}</span>
                </div>
              </form> -->
            </div>
            <div class="w-1/2 bg(left no-repeat) absolute inset-y-0 right-0 opacity-30 filter blur-md" style="background-image: url('/_assets/img/bg-hornet.png')"></div>
          </div>
          <div class="mx-auto py-12 max-w-7xl md:(flex)">
            <div class="max-w-sm space-y-6">
              <a href="/" class="group inline-flex transform motion-safe:(transition) hover:(rotate-3)">
                {{ logo.x(
                  title=site.meta.title,
                  svg='m-auto w-auto h-10 text-sec-500 motion-safe:(transition) group-hover:(text-sec-400) lg:(h-16)',
                  logo='text-pri-400 motion-safe:(transition) group-hover:(text-pri-600)'
                ) }}
              </a>
              <p class="text-gray-500">{{ site.meta.description }}</p>
              <ul class="flex flex-wrap space-x-6">
                {% for soc in site.social %}
                <li><a href="{{ soc.url }}" class="text(xl gray-400) inline-flex motion-safe:(transition) hover:(text-gray-900)"><i class="m-auto fa-brands fa-fw fa-lg fa-{{ soc.ico }}" title="{{ soc.title }}"></i></a></li>
                {% endfor %}
              </ul>
            </div>
            <div class="pt-6 text(xs gray-500) leading-relaxed md:(ml-auto pt-0 text-right self-end)">
              Updated: <time datetime="{{ build.time.raw }}">{{ build.time.formatted }}</time>
            </div>
          </div>
          <div class="pt-6 pb-2 border(t gray-500 opacity-20)">
            <p class="text-sm text-gray-400 xl:(text-center)">
              &copy;{% year %} {{ site.meta.footer }}
              <a href="https://{{ site.meta.author_url }}/" class="group mx-1 text-sec-600 inline-flex flex-col motion-safe:(transition) hover:(text-sec-900)">
                {{ site.meta.author }}
                <b class="h-px w-full flex"><b class="w-0 bg-current motion-safe:(transition-all) group-hover:(w-full)"></b></b>
              </a>
            </p>
          </div>
        </div>
      </footer>
    </div>

    <script src="/_assets/js/alpine.js?v={% version %}"></script>
    <script src="/_assets/js/twind.js?v={% version %}"></script>
    <script src="https://kit.fontawesome.com/a2bf4ed495.js"></script>
    <script>
      twind.setup({
        mode: "silent",
        theme: {
          extend: {
            colors: {
              pri: twindColors.green,
              sec: twindColors.yellow,
            },
            fontFamily: (theme) => ({
              serif: 'Roboto Slab,' + theme('fontFamily.serif'),
            }),
          },
        },
        plugins: {
          ...twindTypography(),
          'scroll-smooth': { 'scroll-behavior': 'smooth' },
        },
      })
      twind.tw(() => ({
        '@global': {
          '.prose h1,.prose h2,.prose h3': { '@apply': 'font-black' },
          '.prose h4,.prose h5,.prose h6': { '@apply': 'font-bold' },
          '.prose blockquote': { '@apply': 'border-l-4 font-semibold italic' },
          '.prose ul': { '@apply': 'ml-4 list-disc' },
          '.prose ol': { '@apply': 'ml-4 list-decimal' },
          '.prose ul > li,.prose ol > li': { 'padding-left': '.25rem !important' },
          '.prose ul > li::marker,.prose ol > li::marker': { '@apply': 'text-pri-900 text-opacity-50' },
          '.prose table': { '@apply': 'w-full' },
          '.prose table th': { '@apply': 'text-left' },
          '.prose code': { '@apply': 'font-bold' },
          '.prose pre': { '@apply': 'bg-gray-800 text-gray-100 overflow-x-auto' },
          '[x-cloak]': { '@apply': 'hidden', },
        }
      }))
      twindObserve.observe(document.documentElement);
      document.documentElement.removeAttribute('hidden');
    </script>

    <svg xmlns="http://www.w3.org/2000/svg" class="w-0 h-0 text-white fill-current absolute bottom-0 left-0" aria-hidden="true">
      <defs>
        <pattern id="div-t" width="480" height="140" patternUnits="userSpaceOnUse">
          <g opacity=".25">
            <polygon points="80,35 100,0 140,0 160,35 140,70 100,70" />
            <polygon points="260,70 280,35 320,35 340,70 320,105 280,105" />
          </g>
          <g opacity=".5">
            <polygon points="20,70 40,35 80,35 100,70 80,105 40,105" />
            <polygon points="140,70 160,35 200,35 220,70 200,105 160,105" />
          </g>
          <polygon points="0,140 0,70 20,70 40,105 80,105 100,70 140,70 160,105 200,105 220,70 260,70 280,105 320,105 340,70 380,70 400,105 440,105 460,70 480,70 480,140" />
        </pattern>
        <pattern id="div-b" width="480" height="140" patternUnits="userSpaceOnUse">
          <g transform="scale(1, -1) translate(0, -105)">
            <g opacity=".25">
              <polygon points="80,35 100,0 140,0 160,35 140,70 100,70" />
              <polygon points="260,70 280,35 320,35 340,70 320,105 280,105" />
            </g>
            <g opacity=".5">
              <polygon points="20,70 40,35 80,35 100,70 80,105 40,105" />
              <polygon points="140,70 160,35 200,35 220,70 200,105 160,105" />
            </g>
            <polygon points="0,140 0,70 20,70 40,105 80,105 100,70 140,70 160,105 200,105 220,70 260,70 280,105 320,105 340,70 380,70 400,105 440,105 460,70 480,70 480,140" />
          </g>
        </pattern>
      </defs>
    </svg>

  </body>

</html>