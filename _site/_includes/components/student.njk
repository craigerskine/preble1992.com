{% macro x(info=[]) %}
<div class="mx-auto w-full max-w-xs relative lg:(max-w-none)">
  <div class="w-full pt-[100%] relative">
    <div class="ring-(2 inset sec-500/50) hidden absolute inset-0 transform translate-x-3 translate-y-3 rotate-2 rounded-3xl lg:(block)" aria-hidden="true"></div>
    <div class="ring-(2 inset sec-500/80) hidden absolute inset-0 transform -translate-x-2 -translate-y-2 -rotate-1 rounded-3xl lg:(block)" aria-hidden="true"></div>
    <img :src="'/_assets/img/people/'+ (eraTabActive === 0 ? '2000/' : (eraTabActive === 2) ? '1980/' : '') +'{{ info.data.last | slugify }}-{{ info.data.first | slugify }}.jpg'" alt="{{ info.first }} {{ info.last }} photo" class="w-full h-full object-(center cover) absolute inset-0 rounded-xl md:(rounded-3xl)" />
  </div>
  <div class="pt-2 md:(pl-4)">
    <strong class="block truncate md:(text-lg)">{{ info.data.first }} {{ info.data.last }}</strong>
    <small class="text-sm truncate block opacity-60">{{ info.data.meta }}</small>
    <div class="p-3 bg-sec-600 text-(sm white center) absolute inset-x-4 -top-4 rounded-lg shadow-xl transform -rotate-3" x-show="eraTabActive !== 1" x-text="eraTabActive === 0 ? 'Send us your photo...' : 'Photo coming soon... Adam?'"></div>
    <i x-show="eraTabActive !== 1" class="text-(9xl sec-200) absolute top-24 left-1/2 opacity-20 transform -translate-x-1/2 md:(text-[calc(6vw)])"><iconify-icon icon="fa6-solid:user-graduate" inline="false"></iconify-icon></i>
  </div>
</div>
{% endmacro %}